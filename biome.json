{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "performance": {
        "noAccumulatingSpread": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noUselessElse": "off"
      },
      "suspicious": {
        "noDoubleEquals": "off",
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noControlCharactersInRegex": "off"
      },
      "complexity": {
        "useLiteralKeys": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn"
      },
      "security": {
        "noDangerouslySetInnerHtml": "off"
      },
      "a11y": {
        "useValidAnchor": "off",
        "useButtonType": "off",
        "useKeyWithClickEvents": "off",
        "useKeyWithMouseEvents": "off"
      }
    }
  }
}
